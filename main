#include "std_lib_facilities.h"

int main()
{


	long long int rice_grain{1};
	for (size_t i = 1; i <= 64; ++i) {
		rice_grain *= 2;
		cout << "square " << i << ": " << rice_grain << " rice grains" << '\n';
		if (rice_grain >= 1000) {
			cout << "-----------------1000 rice grains---------------" << "square: " << i << '\n';
		}
		if (rice_grain >= 1'000'000) {
			cout << "-----------------1,000,000 rice grains----------" << "square: " << i << '\n';
		}
		if (rice_grain >= 1'000'000'000) {
			cout << "-----------------1,000,000,00 rice grains-------" << "square: " << i << '\n';
		}
	}
	return 0;
}
